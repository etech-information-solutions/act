                <table id="clientBudget-table" class="da-table" style="border-bottom: 0;">

                    <thead>
                        <tr>
                            <th style="width: 7%;">Year</th>
                            <th style="width: 7%;">Jan</th>
                            <th style="width: 7%;">Feb</th>
                            <th style="width: 7%;">Mar</th>
