@model RegionViewModel

@using ACT.UI.Models;

@{
    if ( ViewBag.IncludeLayout == null )
    {
        Layout = null;
    }

    ViewBag.Title = "Add Region";
}


@Html.Partial( "_Notification" )

@using ( Html.BeginForm( "AddRegion", "Administration", FormMethod.Post, new { enctype = "multipart/form-data", @data_ajax_form = "1", @data_target = "#regions", @class = "custom-validate", @style = "width: auto;" } ) )
{
    <div id="edit-item">

        <h2 class="uppercase" style="width: auto;">
            <img alt="" src="@Url.Content( "~/images/add.png" )" />
            <span>Add Region</span>
        </h2>

        @Html.ValidationSummary( true )

        <div id="item-details" class="item-details" style="width: auto;">

            <div class="left" style="width: 48%; margin-right: 4%;">

                <div class="edit-label">
                    @Html.LabelFor( model => model.Name )
                </div>
                <div class="edit-field">
                    @Html.TextBoxFor( model => model.Name, new { @placeholder = "Enter Region Name" } )
                    @Html.ValidationMessageFor( model => model.Name )
                </div>

                <div class="edit-label">
                    @Html.LabelFor( model => model.Description )
                </div>
                <div class="edit-field">
                    @Html.TextAreaFor( model => model.Description, new { @style = "width: 93%;", @placeholder = "Enter Region Description" } )
                    @Html.ValidationMessageFor( model => model.Description )
                </div>

                <div class="edit-label">
                    @Html.LabelFor( model => model.CountryId )
                </div>
                <div class="edit-field">
                    @Html.DropDownListFor( model => model.CountryId, model => Model.CountryOptions, p => p.Key, p => p.Value, true, new { @class = "chzn", @style = "width: 98%;" } )
                    @Html.ValidationMessageFor( model => model.CountryId )
                </div>

                <div class="edit-label">
                    @Html.LabelFor( model => model.ProvinceId )
                </div>
                <div class="edit-field">
                    @Html.DropDownListFor( model => model.ProvinceId, model => Model.ProvinceOptions, p => p.Key, p => p.Value, true, new { @class = "chzn", @style = "width: 98%;" } )
                    @Html.ValidationMessageFor( model => model.ProvinceId )
                </div>

            </div>

            <div class="left" style="width: 48%;">

                <div class="edit-label">
                    @Html.LabelFor( model => model.PSPId )
                </div>
                <div class="edit-field">
                    @Html.DropDownListFor( model => model.PSPId, model => Model.PSPOptions, p => p.Key, p => p.Value, false, new { @class = "chzn", @style = "width: 98%;" } )
                    @Html.ValidationMessageFor( model => model.PSPId )
                </div>

                <div class="edit-label">
                    @Html.LabelFor( model => model.RegionManagerId )
                </div>
                <div class="edit-field">
                    @Html.DropDownListFor( model => model.RegionManagerId, model => Model.RegionManagerOptions, r => r.Key, r => r.Value, true, new { @class = "chzn", @style = "width: 98%;" } )
                    @Html.ValidationMessageFor( model => model.RegionManagerId )
                </div>

                <div class="edit-label">
                    @Html.LabelFor( model => model.Status )
                </div>
                <div class="edit-field">
                    @Html.EnumDropDownFor( model => model.Status, false, new { @class = "chzn", @style = "width: 98%;" } )
                    @Html.ValidationMessageFor( model => model.Status )
                </div>

            </div>

            <div class="clear" style="border-bottom: 1px dashed #ccc; margin-bottom: 10px; height: 0;">&nbsp;</div>

            <p>
                <input id="save-btn" type="submit" value="Save" />

                <span style="padding: 0 5px;">/</span>

                <a data-refresh="1" data-target="#regions">Cancel</a>
            </p>

        </div>

    </div>
}