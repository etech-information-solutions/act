        </li>*@

        <li data-hot-spot="1" data-c="Administration" data-t="AuditLog" class="none">
            <a data-ap-tab="1" data-target="#auditlog" data-tab-holder="#tab-data" data-partial-load="1" data-rendered="0" data-load-url="AuditLog">Audit Log</a>
        </li>

        <li data-hot-spot="1" data-c="Administration" data-t="Broadcasts" class="none">
            <a data-ap-tab="1" data-target="#broadcasts" data-tab-holder="#tab-data" data-partial-load="1" data-rendered="0" data-load-url="Broadcasts">Broadcasts</a>
        </li>

