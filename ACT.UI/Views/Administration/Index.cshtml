
@using ACT.Core.Enums;
@using ACT.Core.Models;

@{
    ViewBag.Title = "Administration";

    UserModel user = User.Get();
}


<div class="ap-tabs">

    <ul>

        <li data-hot-spot="1" data-c="Administration" data-t="Users" class="none">
