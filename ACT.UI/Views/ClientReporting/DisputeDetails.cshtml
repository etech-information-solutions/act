@model Dispute

@using ACT.Core.Enums
@using ACT.Data.Models;

@{
    if ( ViewBag.IncludeLayout == null )
    {
        Layout = null;
    }

    ViewBag.Title = "Details";
}

@if ( ViewBag.IncludeLayout != null )
{
    <h2>
        <img alt="" src="@Url.Content( "~/images/info.png" )" />
        <span>Dispute Details</span>
    </h2>
}

<div id="item-details" class="item-details" style="width: auto;">

    @if ( ViewBag.IncludeLayout == null )
    {
        <h2>
            <img alt="" src="@Url.Content( "~/images/info.png" )" />
            <span>Dispute Details</span>
        </h2>
    }

    <div class="left" style="width: 48%; margin-right: 4%;">

        <div class="display-label">
            Account Number
        </div>
        <div class="display-field">
            @Html.DisplayFor( model => model.ChepLoad.AccountNumber )
        </div>

        <div class="display-label">
            TDN Number
        </div>
        <div class="display-field">
            @Html.DisplayFor( model => model.TDNNumber )
        </div>

        <div class="display-label">
            Raised Date
        </div>
        <div class="display-field">
            @Model.CreatedOn.ToString( "yyyy-MM-dd" )
        </div>

        <div class="display-label">
            Docket Number
        </div>
        <div class="display-field">
            @Html.DisplayFor( model => model.DocketNumber )
        </div>

        <div class="display-label">
            Reference
        </div>
        <div class="display-field">
            @Html.DisplayFor( model => model.Reference )
        </div>

        <div class="display-label">
            Quantity
        </div>
        <div class="display-field">
            @Math.Round( Model.Quantity ?? 0, 0 ).ToString()
        </div>

        <div class="display-label">
            Equipment
        </div>
        <div class="display-field">
            @Html.DisplayFor( model => model.Equipment )
        </div>

    </div>

    <div class="left" style="width: 48%;">

        <div class="display-label">
            Dispute Email
        </div>
        <div class="display-field">
            @Html.DisplayFor( model => model.DisputeEmail )
        </div>

        <div class="display-label">
            Other Party
        </div>
        <div class="display-field">
            @Html.DisplayFor( model => model.OtherParty )
        </div>

        <div class="display-label">
            Sender
        </div>
        <div class="display-field">
            @Html.DisplayFor( model => model.Sender )
        </div>

        <div class="display-label">
            Receiver
        </div>
        <div class="display-field">
            @Html.DisplayFor( model => model.Receiver )
        </div>

        <div class="display-label">
            Declarer
        </div>
        <div class="display-field">
            @Html.DisplayFor( model => model.Declarer )
        </div>

        <div class="display-label">
            Product
        </div>
        <div class="display-field">
            @Html.DisplayFor( model => model.Product )
        </div>

        <div class="display-label">
            Status
        </div>
        <div class="display-field">
            @(( ( DisputeStatus ) Model.DisputeStatus ).GetDisplayText())
        </div>

    </div>

    <div class="clear" style="border-bottom: 1px dashed #ccc; margin-bottom: 20px; height: 0;">&nbsp;</div>

    <div class="display-label">
        Dispute Reason
    </div>
    <div class="display-field">
        @Html.DisplayFor( model => model.DisputeReason )
    </div>

    <div class="clear" style="border-bottom: 1px dashed #ccc; margin-bottom: 20px; height: 0;">&nbsp;</div>

    @if ( ViewBag.IncludeLayout == null )
    {
        <p>
            @if ( ViewBag.IncludeLayout == null )
            {
                <a data-cancel="1" data-target="#item-details" data-remove="tr.edit">Close</a>
            }
        </p>
    }

    @if ( ViewBag.IncludeLayout != null )
    {
        <div class="back-to-list">
            @Html.ActionLink( "Back to List", "Index" )
        </div>
    }

</div>
