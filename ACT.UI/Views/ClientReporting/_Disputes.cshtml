
@model PagingExtension

@using ACT.Core.Enums;
@using ACT.Core.Models.Custom;

@{
    ViewBag.ShowExport = true;
    ViewBag.ShowCustom = true;
    ViewBag.ViewName = "_Disputes";
}


@Html.Partial( "_Notification" )

@{
    Int32 count = Model.Start;
    List<DisputeCustomModel> items = ( List<DisputeCustomModel> ) Model.Items;
}

@if ( Model == null || !items.Any() )
{
    <div class="notification message-warn" style="margin-bottom: 20px;">
        There are no Disputes available matching your search criteria.
    </div>
}

<table id="disputes-table" class="da-table datatable-numberpaging sort fixed-header" data-fixed-header-target="#disputes-table_wrapper" data-starting-point=".ap-tabs ul">

    <thead>
        <tr>
            <th data-name="Count">
                #
            </th>
            @*<th data-name="ChepLoadAccountNumber" data-column="ChepLoadAccountNumber">
                Account #
            </th>*@
            <th data-name="TDNNumber" data-column="d.TDNNumber">
                TDN
            </th>
            <th data-name="CreatedOn" data-column="d.CreatedOn">
                Raised Date
            </th>
            <th data-name="DocketNumber" data-column="d.DocketNumber">
                Docket #
            </th>
            <th data-name="Reference" data-column="d.Reference">
                Ref
            </th>
            <th data-name="ActionBy" data-column="u1.Name">
                Action By
            </th>
            <th data-name="OtherParty" data-column="d.OtherParty">
                Other Party
            </th>
            <th data-name="DisputeStatus" data-column="d.DisputeStatus">
                Status
            </th>
            <th data-name="Equipment" data-column="d.Equipment">
                Equipment
            </th>
            <th data-name="Quantity" data-column="d.Quantity">
                Quantity
            </th>
            <th data-name="Actions">
                Actions
            </th>
        </tr>
    </thead>

    <tbody>
        @if ( Model != null && items != null && items.Count() > 0 )
        {
            foreach ( var item in items )
            {
                DisputeStatus status = ( DisputeStatus ) item.Status;

                <tr id="tr-@item.Id-item" class="tr-@item.Id-item">

                    <td width="1%">
                        @count
                    </td>
                    @*<td>
                        @item.ChepLoadAccountNumber
                    </td>*@
                    <td>
                        @item.TDNNumber
                    </td>
                    <td>
                        @item.CreatedOn.ToString( "yyyy-MM-dd" )

                        <a class="block" rel="tipsyE" title="Review audit log" data-audit-log="1" data-pid="@item.Id" data-type="Dispute">
                            <img alt="" src="@Url.Content( "~/Images/duplicate-content.png" )" style="max-width: 15px;" />
                            <span></span>
                        </a>
                    </td>
                    <td>
                        @item.DocketNumber
                    </td>
                    <td>
                        @item.Reference
                    </td>
                    <td>
                        @item.ActionUser
                    </td>
                    <td>
                        @item.OtherParty
                    </td>
                    <td>
                        @status.GetDisplayText()

                        @if ( ( status == DisputeStatus.Resolved || status == DisputeStatus.Cancelled ) && !string.IsNullOrWhiteSpace( item.ResolvedUser ) )
                        {
                            <strong class="block">By @item.ResolvedUser</strong>

                            if ( item.ResolvedOn.HasValue )
                            {
                                <small class="block">on @item.ResolvedOn.Value.ToString( "yyyy-MM-dd HH:mm" )</small>
                            }
                        }
                    </td>
                    <td>
                        @item.Equipment
                    </td>
                    <td>
                        @item.Quantity
                    </td>
                    <td width="4%">
                        @Html.ActionLink( "Details", "DisputeDetails", new { id = item.Id }, new { @class = "info", @data_details = "1", @data_id = item.Id, @data_target = ".tr-" + item.Id + "-item" } )
                    </td>

                </tr>

                count++;
            }
        }
    </tbody>

</table>

