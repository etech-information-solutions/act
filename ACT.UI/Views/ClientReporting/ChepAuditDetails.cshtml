@model ChepAudit

@using ACT.Core.Enums
@using ACT.Data.Models;

@{
    if ( ViewBag.IncludeLayout == null )
    {
        Layout = null;
    }

    ViewBag.Title = "Details";

    Document auditReport = ViewBag.Document;
}

@if ( ViewBag.IncludeLayout != null )
{
    <h2>
        <img alt="" src="@Url.Content( "~/images/info.png" )" />
        <span>Chep Audit Report Details</span>
    </h2>
}

<div id="item-details" class="item-details" style="width: auto;">

    @if ( ViewBag.IncludeLayout == null )
    {
        <h2>
            <img alt="" src="@Url.Content( "~/images/info.png" )" />
            <span>Chep Audit Report Details</span>
        </h2>
    }

    <div class="left" style="width: 48%; margin-right: 2%;">

        <div class="display-label">
            Date Created
        </div>
        <div class="display-field">
            @Model.CreatedOn.ToString( "yyyy-MM-dd" )
        </div>

        <div class="display-label">
            Site
        </div>
        <div class="display-field">
            @Html.DisplayFor( model => model.Site.Name )
        </div>

        <div class="display-label">
            Equipment
        </div>
        <div class="display-field">
            @Html.DisplayFor( model => model.Equipment )
        </div>

        @if ( auditReport != null )
        {
            <div class="display-label">
                Audit Report File
            </div>
            <div class="display-field">
                <a class="block" target="_blank" href="@Url.Action( "ViewDocument", "ClientReporting", new { @id = auditReport.Id } )">
                    <img alt="download" src="@Url.Content( "~/Images/download.png" )" style="margin-bottom: 2px;" />

                    @auditReport.Name (@auditReport.Type)
                </a>
            </div>
        }

    </div>

    <div class="left" style="width: 48%;">

        <div class="display-label">
            Chep Stock Balance
        </div>
        <div class="display-field">
            @(Math.Round( Model.ChepStockBalance ?? 0, 2 ))
        </div>

        <div class="display-label">
            Invoice In
        </div>
        <div class="display-field">
            @(Math.Round( Model.NotInvoiceIn ?? 0, 2 ))
        </div>

        <div class="display-label">
            Invoice Out
        </div>
        <div class="display-field">
            @(Math.Round( Model.NotInvoiceOut ?? 0, 2 ))
        </div>

        <div class="display-label">
            Req Adjustment
        </div>
        <div class="display-field">
            @(Math.Round( Model.ReqAdjustment ?? 0, 2 ))
        </div>

        <div class="display-label">
            MCC In
        </div>
        <div class="display-field">
            @(Math.Round( Model.NotMCCIn ?? 0, 2 ))
        </div>

        <div class="display-label">
            MCC Out
        </div>
        <div class="display-field">
            @(Math.Round( Model.NotMCCOut ?? 0, 2 ))
        </div>

        <div class="display-label">
            MCC Balance
        </div>
        <div class="display-field">
            @(Math.Round( Model.MccBalance ?? 0, 2 ))
        </div>

        <div class="display-label">
            Suspend ITL
        </div>
        <div class="display-field">
            @(Math.Round( Model.SuspendITL ?? 0, 2 ))
        </div>

        <div class="display-label">
            Suspend MCC
        </div>
        <div class="display-field">
            @(Math.Round( Model.SuspendMCC ?? 0, 2 ))
        </div>

        <div class="display-label">
            Adjusted Invoice Balance
        </div>
        <div class="display-field">
            @(Math.Round( Model.AdjustedInvBalance ?? 0, 2 ))
        </div>

    </div>

    <div class="clear" style="border-bottom: 1px dashed #ccc; margin-bottom: 20px; height: 0;">&nbsp;</div>

    @if ( ViewBag.IncludeLayout == null )
    {
        <p>
            @Html.ActionLink( "Edit", "EditChepAudit", new { id = Model.Id }, new { @class = "edit", @data_edit = "1", @data_id = Model.Id, @data_target = "#tr-" + Model.Id + "-item" } )

            @if ( ViewBag.IncludeLayout == null )
            {
                <span style="padding: 0 5px;">/</span>
                <a data-cancel="1" data-target="#item-details" data-remove="tr.edit">Cancel</a>
            }
        </p>
    }

    @if ( ViewBag.IncludeLayout != null )
    {
        <div class="back-to-list">
            @Html.ActionLink( "Back to List", "Index" )
        </div>
    }

</div>
