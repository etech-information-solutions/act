@model PagingExtension

@using ACT.Core.Models;

@{
    ViewBag.ShowExport = true;
    ViewBag.ShowCustom = true;

    ViewBag.ViewName = "_AuthorisationStats";
}


@Html.Partial( "_Notification" )


@{
    Int32 count = Model.Start;
    List<CountModel> items = ( List<CountModel> ) Model.Items;
}


@if ( Model == null || !items.Any() )
{
    <div class="notification message-warn" style="margin-bottom: 20px;">
        There are no Authorisation Stats available matching your search criteria.
    </div>
}

<table id="AuthorisationStats-table" class="da-table datatable-numberpaging sort fixed-header" data-fixed-header-target="#AuthorisationStats-table_wrapper" data-starting-point=".ap-tabs ul">
    <thead>
        <tr>
            <th data-name="Count">
                #
            </th>
            <th data-name="CompanyName" data-column="c.CompanyName">
                Client
            </th>
            <th data-name="Total" data-column="Total">
                Total
            </th>
        </tr>
    </thead>

    <tbody>
        @if ( Model != null && items != null && items.Count > 0 )
        {
            foreach ( CountModel item in items )
            {
                <tr id="tr-@item.Description-item-op" class="tr-@item.Description-item-op">

                    <td width="1%">
                        @count
                    </td>
                    <td>
                        @item.Description
                    </td>
                    <td>
                        @item.Total
                    </td>

                </tr>

                count++;
            }
        }
    </tbody>

</table>

@Html.Partial( "_Paging" )
