@model ChepLoad

@using ACT.Core.Enums
@using ACT.Data.Models;

@{
    if ( ViewBag.IncludeLayout == null )
    {
        Layout = null;
    }

    ViewBag.Title = "Details";
}

@if ( ViewBag.IncludeLayout != null )
{
    <h2>
        <img alt="" src="@Url.Content( "~/images/info.png" )" />
        <span>Pooling Agent Data Details</span>
    </h2>
}

<div id="item-details" class="item-details" style="width: auto;">

    @if ( ViewBag.IncludeLayout == null )
    {
        <h2>
            <img alt="" src="@Url.Content( "~/images/info.png" )" />
            <span>Pooling Agent Data Details</span>
        </h2>
    }

    <div class="left" style="width: 31%; margin-right: 3%;">

        <div class="display-label">
            Client
        </div>
        <div class="display-field">
            @( Model.Client?.CompanyName )
        </div>

        <div class="display-label">
            Date Imported/Created
        </div>
        <div class="display-field">
            @( Model.CreatedOn.ToString( "yyyy-MM-dd" ) )
        </div>

        <div class="display-label">
            Chep Status
        </div>
        <div class="display-field">
            @Html.DisplayFor( model => model.ChepStatus )
        </div>

        <div class="display-label">
            Transaction Type
        </div>
        <div class="display-field">
            @Html.DisplayFor( model => model.TransactionType )
        </div>

        <div class="display-label">
            Docket Number
        </div>
        <div class="display-field">
            @Html.DisplayFor( model => model.DocketNumber )
        </div>

        <div class="display-label">
            Original Docket Number
        </div>
        <div class="display-field">
            @Html.DisplayFor( model => model.OriginalDocketNumber )
        </div>

        <div class="display-label">
            Status
        </div>
        <div class="display-field">
            @(( ( Status ) Model.Status ).GetDisplayText())
        </div>

        <div class="display-label">
            Posting Type
        </div>
        <div class="display-field">
            @(( ( PostingType ) Model.PostingType ).GetDisplayText())
        </div>

        <div class="display-label">
            Balance Status
        </div>
        <div class="display-field">
            @Html.DisplayFor( model => model.BalanceStatus )
        </div>

        <div class="display-label">
            Reason
        </div>
        <div class="display-field">
            @Html.DisplayFor( model => model.Reason )
        </div>

    </div>

    <div class="left" style="width: 31%; margin-right: 3%;">

        <div class="display-label">
            UMI
        </div>
        <div class="display-field">
            @Html.DisplayFor( model => model.UMI )
        </div>

        <div class="display-label">
            Location Id
        </div>
        <div class="display-field">
            @Html.DisplayFor( model => model.LocationId )
        </div>

        <div class="display-label">
            Location
        </div>
        <div class="display-field">
            @Html.DisplayFor( model => model.Location )
        </div>

        <div class="display-label">
            Other Party Id
        </div>
        <div class="display-field">
            @Html.DisplayFor( model => model.OtherPartyId )
        </div>

        <div class="display-label">
            Other Party
        </div>
        <div class="display-field">
            @Html.DisplayFor( model => model.OtherParty )
        </div>

        <div class="display-label">
            Other Party Country
        </div>
        <div class="display-field">
            @Html.DisplayFor( model => model.OtherPartyCountry )
        </div>

        <div class="display-label">
            Equipment Code
        </div>
        <div class="display-field">
            @Html.DisplayFor( model => model.EquipmentCode )
        </div>

        <div class="display-label">
            Equipment
        </div>
        <div class="display-field">
            @Html.DisplayFor( model => model.Equipment )
        </div>

        <div class="display-label">
            Invoice Number
        </div>
        <div class="display-field">
            @Html.DisplayFor( model => model.InvoiceNumber )
        </div>

    </div>

    <div class="left" style="width: 31%;">

        <div class="display-label">
            Quantity
        </div>
        <div class="display-field">
            @Html.DisplayFor( model => model.Quantity )
        </div>

        <div class="display-label">
            Ref
        </div>
        <div class="display-field">
            @Html.DisplayFor( model => model.Ref )
        </div>

        <div class="display-label">
            Other Ref
        </div>
        <div class="display-field">
            @Html.DisplayFor( model => model.OtherRef )
        </div>

        <div class="display-label">
            Batch Ref
        </div>
        <div class="display-field">
            @Html.DisplayFor( model => model.BatchRef )
        </div>

        <div class="display-label">
            Shipment Date
        </div>
        <div class="display-field">
            @Html.DisplayFor( model => model.ShipmentDate )
        </div>

        <div class="display-label">
            Delivery Date
        </div>
        <div class="display-field">
            @Html.DisplayFor( model => model.DeliveryDate )
        </div>

        <div class="display-label">
            Effective Date
        </div>
        <div class="display-field">
            @Html.DisplayFor( model => model.EffectiveDate )
        </div>

        <div class="display-label">
            Create Date
        </div>
        <div class="display-field">
            @Html.DisplayFor( model => model.CreateDate )
        </div>

        <div class="display-label">
            Created By
        </div>
        <div class="display-field">
            @Html.DisplayFor( model => model.CreatedBy )
        </div>

        <div class="display-label">
            Data Source
        </div>
        <div class="display-field">
            @Html.DisplayFor( model => model.DataSource )
        </div>

    </div>

    <div class="clear" style="border-bottom: 1px dashed #ccc; margin: 20px 0; height: 0;">&nbsp;</div>

    @if ( ViewBag.IncludeLayout == null )
    {
        <p>
            @Html.ActionLink( "Edit", "EditPoolingAgentData", new { id = Model.Id }, new { @class = "edit", @data_edit = "1", @data_id = Model.Id, @data_target = "#tr-" + Model.Id + "-item" } )

            @if ( ViewBag.IncludeLayout == null )
            {
                <span style="padding: 0 5px;">/</span>
                <a data-cancel="1" data-target="#item-details" data-remove="tr.edit">Cancel</a>
            }
        </p>
    }

    @if ( ViewBag.IncludeLayout != null )
    {
        <div class="back-to-list">
            @Html.ActionLink( "Back to List", "Index" )
        </div>
    }

</div>
