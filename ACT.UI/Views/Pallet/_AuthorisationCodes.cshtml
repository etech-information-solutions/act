@model PagingExtension

@using ACT.Core.Enums;
@using ACT.Core.Models.Custom;

@{
    ViewBag.ShowExport = true;
    ViewBag.ShowCustom = true;

    ViewBag.ViewName = "_AuthorisationCodes";
}


@Html.Partial( "_Notification" )


@{
    int count = Model.Start;

    List<ClientAuthorisationCustomModel> items = ( List<ClientAuthorisationCustomModel> ) Model.Items;
}


@if ( Model == null || !items.Any() )
{
    <div class="notification message-warn" style="margin-bottom: 20px;">
        There are no Authorisation Codes available matching your search criteria.
    </div>
}

<table id="authorisationcodes-table" class="da-table datatable-numberpaging sort fixed-header" data-fixed-header-target="#authorisationcodes-table_wrapper" data-starting-point=".ap-tabs ul">
    <thead>
        <tr>
            <th data-name="Count">
                #
            </th>
            <th data-name="LoadDate" data-column="cl.LoadDate">
                Load Date
            </th>
            <th data-name="LoadNumber" data-column="cl.LoadNumber">
                Load #
            </th>
            <th data-name="ReceiverNumber" data-column="cl.ReceiverNumber">
                Ref #
            </th>
            <th data-name="DeliveryNote" data-column="cl.DeliveryNote">
                Delivery #
            </th>
            <th data-name="Transporter" data-column="t.TradingName">
                Transporter
            </th>
            <th data-name="Vehicle" data-column="v.Registration">
                Vehicle
            </th>
            <th data-name="CompanyName" data-column="c.CompanyName">
                Client
            </th>
            <th data-name="FromSiteName" data-column="s1.Description">
                From Site
            </th>
            <th data-name="ToSiteName" data-column="s2.Description">
                To Site
            </th>
            <th data-name="Authoriser" data-column="u.Name">
                Authoriser
            </th>
            <th data-name="Code" data-column="ca.Code">
                Auth Code
            </th>
            <th data-name="AuthorisationDate" data-column="ca.AuthorisationDate">
                Auth Date
            </th>
            <th data-name="Actions">
                Actions
            </th>
        </tr>
    </thead>

    <tbody>
        @if ( Model != null && items != null && items.Count() > 0 )
        {
            foreach ( ClientAuthorisationCustomModel item in items )
            {
                Status status = ( Status ) ( item.Status ?? 1 );

                string enable = ( status == Status.Active ) ? "Disable" : "Enable";
                string active = ( status == Status.Active ) ? "active" : "inactive";

                <tr id="authorisationcodes-@item.Id-item" class="authorisationcodes-@item.Id-item @active">

                    <td width="1%">
                        @count
                    </td>
                    <td>
                        @(item.LoadDate?.ToString( "yyyy-MM-dd" ))
                    </td>
                    <td>
                        @item.LoadNumber
                    </td>
                    <td>
                        @item.ReceiverNumber
                    </td>
                    <td>
                        @item.DeliveryNote
                    </td>
                    <td>
                        @item.TransporterName
                    </td>
                    <td>
                        @item.VehicleRegistration
                    </td>
                    <td>
                        @item.ClientName
                    </td>
                    <td>
                        @item.FromSiteName
                    </td>
                    <td>
                        @item.ToSiteName
                    </td>
                    <td class="purple">
                        @item.AuthoriserName
                    </td>
                    <td class="purple">
                        @(item.AuthorisationDate?.ToString( "yyyy-MM-dd @HH:mm tt" ))
                    </td>
                    <td class="purple">
                        @item.Code
                    </td>
                    <td width="5%">
                        @if ( string.IsNullOrEmpty( item.Code ) )
                        {
                            @Html.ActionLink( "Generate", "GenerateAuthorisationCode", new { id = item.Id }, new { @class = "add append-search", @data_delete = "1", @data_id = item.Id, @data_target = "#authorisationcodes-" + item.Id + "-item", @data_refresh_target = "#authorisationcodes", @rel = "tipsyE", @title = "Generate authorisation code this load?" } )
                        }
                        else
                        {
                            @Html.ActionLink( enable, "DeleteAuthorisationCode", new { Id = item.ClientAuthorisationId }, new { @class = "warn append-search", @data_delete = "1", @data_id = item.ClientAuthorisationId, @data_target = "#authorisationcodes-" + item.Id + "-item", @data_refresh_target = "#authorisationcodes", @rel = "tipsyE", @title = enable + " this item?" } )
                        }
                    </td>

                </tr>

                count++;
            }
        }
    </tbody>

</table>

@Html.Partial( "_Paging" )