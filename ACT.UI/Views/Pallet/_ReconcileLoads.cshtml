                        '</td > <td style="width: 35%;">Chep</td> <td style="width: 20%;"> ' +
                        load.LoadDate +
                        '</td><td  style = "width: 20%;"> ' +
                        load.EffectiveDate +
                        '</td><td  style = "width: 20%;"> ' +
                        load.DeliveryNote +
                        '</td><td  style = "width: 20%;"> ' +
                        load.Equipment +
                        '</td><td  style = "width: 20%;"> ' +
                        load.DocketNumber +
                        '</td><td  style = "width: 20%;"> </td><td  style = "width: 20%;"> ' +
                        load.OriginalQuantity +
                        '</td><td><a href="#doc" rel="modal:open" onclick="loadDocs(' + load.Id + ', 0)"><i class="fa fa-file-text-o"></i></a></td></tr>';
                });
                rowDiv.html(result);

            },
