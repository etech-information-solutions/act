@model PagingExtension

@using ACT.Data.Models;
@using ACT.Core.Enums;
@using ACT.Core.Models;
@using ACT.Core.Models.Custom;
@using ACT.Core.Services;
@using ACT.Core.Models;

@{
    ViewBag.ShowExport = true;
    ViewBag.ShowCustom = true;

    ViewBag.ViewName = "_Disputes";
}


@Html.Partial( "_Notification" )


@{
    UserModel user = User.Get();

    Int32 count = Model.Start;
    List<DisputeCustomModel> items = ( List<DisputeCustomModel> ) Model.Items;
}


@if ( Model == null || !items.Any() )
{
    <div class="notification message-warn" style="margin-bottom: 20px;">
        There are no Disputes available matching your search criteria.
    </div>
}

<p>
    @Html.ActionLink( "Add", "AddDispute", new { }, new { @class = "add", @rel = "tipsyS", @title = "Add a new Dispute?", @data_edit = "1", @data_id = 0, @data_target = "#disputes" } )
    <span class="loader"></span>
</p>

<table id="disputes-table" class="da-table datatable-numberpaging sort fixed-header" data-fixed-header-target="#disputes-table_wrapper" data-starting-point=".ap-tabs ul">
    <thead>
        <tr>
            <th data-name="Count">
                #
            </th>
            <th data-name="CreatedOn" data-column="d.CreatedOn">
                Date Raised
            </th>
            <th data-name="AccountNumber" data-column="cl.AccountNumber">
                Account
            </th>
            <th data-name="DocketNumber" data-column="d.DocketNumber">
                Docket #
            </th>
            <th data-name="Reference" data-column="d.Reference">
                Ref #
            </th>
            <th data-name="OtherParty" data-column="d.OtherParty">
                Other Party
            </th>
            <th data-name="TDNNumber" data-column="d.TDNNumber">
                TDN #
            </th>
            <th data-name="Quantity" data-column="d.Quantity">
                Quantity
            </th>
            <th data-name="ActionUser" data-column="d.ActionUser">
                Action By
            </th>
            <th data-name="CreatedOn" data-column="d.Status">
                Status
            </th>
            <th data-name="Actions">
                Actions
            </th>
        </tr>
    </thead>

    <tbody>
        @if ( Model != null && items != null && items.Count() > 0 )
        {
            foreach ( var item in items )
            {
                DisputeStatus status = ( DisputeStatus ) item.Status;

                string enable = ( status == DisputeStatus.Active || status == DisputeStatus.Resolved ) ? "Cancel" : "Open";
                string active = ( status == DisputeStatus.Active || status == DisputeStatus.Resolved ) ? "active" : "inactive";


                <tr id="tr-@item.Id-item" class="tr-@item.Id-item @active">

                    <td width="1%">
                        @count
                    </td>
                    <td>
                        @item.CreatedOn.ToString( "yyyy-MM-dd" )

                        <a class="block" rel="tipsyE" title="Review audit log" data-audit-log="1" data-pid="@item.Id" data-type="Dispute">
                            <img alt="" src="@Url.Content( "~/Images/duplicate-content.png" )" style="max-width: 15px;" />
                            <span></span>
                        </a>
                    </td>
                    <td>
                        @item.ChepLoadAccountNumber
                    </td>
                    <td>
                        @item.DocketNumber
                    </td>
                    <td>
                        @item.Reference
                    </td>
                    <td>
                        @item.OtherParty
                    </td>
                    <td>
                        @item.TDNNumber
                    </td>
                    <td>
                        @item.Quantity
                    </td>
                    <td>
                        @item.ActionUser
                    </td>
                    <td>
                        @status.GetDisplayText()

                        @if ( ( status == DisputeStatus.Resolved || status == DisputeStatus.Cancelled ) && !string.IsNullOrWhiteSpace( item.ResolvedUser ) && item.ResolvedOn.HasValue )
                        {
                            <small class="block">By @item.ResolvedUser <i class="block">on @item.ResolvedOn.Value.ToString( "yyyy-MM-dd HH:mm" )</i></small>
                        }
                    </td>
                    <td width="15%">
                        @Html.ActionLink( "Details", "DisputeDetails", new { id = item.Id }, new { @class = "info", @data_details = "1", @data_id = item.Id, @data_target = ".tr-" + item.Id + "-item" } )

                        @Html.ActionLink( "Edit", "EditDispute", new { id = item.Id, returnView = "Disputes" }, new { @class = "edit", @data_edit = "1", @data_id = item.Id, @data_target = ".tr-" + item.Id + "-item" } )

                        @Html.ActionLink( enable, "DeleteDispute", new { id = item.Id }, new { @class = "warn", @data_delete = "1", @data_id = item.Id, @data_target = "#tr-" + item.Id + "-item", @data_refresh_target = "#disputes", @rel = "tipsyE", @title = enable + " this item?" } )
                    </td>


                </tr>

                count++;
            }
        }
    </tbody>

</table>
@Html.Partial( "_Paging" )