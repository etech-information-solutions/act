@model List<Contact>

@using ACT.Core.Enums;
@using ACT.Data.Models;

<div class="grouped-area">

    <p>
        <strong>Contacts (@Model.NullableCount())</strong>
    </p>

    <table id="contacts-table" class="da-table">

        <thead>
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Title</th>
                <th>Cell</th>
                <th>Email</th>
                <th>Job</th>
            </tr>
        </thead>

        <tbody>

            @if ( Model.NullableAny() )
            {
                int count = 1;

                foreach ( Contact b in Model )
                {
                    <tr>
                        <td width="1%">
                            @count
                        </td>
                        <td>
                            @b.ContactName
                        </td>
                        <td>
                            @b.ContactTitle
                        </td>
                        <td>
                            @b.ContactCell
                        </td>
                        <td>
                            @b.ContactEmail
                        </td>
                        <td>
                            @( b.JobTitle.HasValue ? ( ( JobType ) b.JobTitle ).GetDisplayText() : string.Empty )
                        </td>
                    </tr>

                    count++;
                }
            }

        </tbody>

    </table>

</div>

<div class="clear" style="border-bottom: 1px dashed #ccc; margin-bottom: 20px;">&nbsp;</div>

<p>
    <a data-cancel="1" data-target="#item-details" data-remove="tr.edit">Close</a>
</p>