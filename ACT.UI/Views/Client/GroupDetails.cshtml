@model Group

@using ACT.Core.Enums;
@using ACT.Data.Models;

@{
    if ( ViewBag.IncludeLayout == null )
    {
        Layout = null;
    }

    ViewBag.Title = "Group Details";
}


<div id="item-details" class="item-details" style="width: auto;">

    @if ( ViewBag.IncludeLayout == null )
    {
        <h2>
            <img alt="" src="@Url.Content( "~/images/info.png" )" />
            <span>Group Details</span>
        </h2>
    }

    <div class="left" style="width: 45%; margin-right: 5%;">

        <div class="display-label">
            Name
        </div>
        <div class="display-field">
            @Html.DisplayFor( model => model.Name )
        </div>

        <div class="display-label">
            Description
        </div>
        <div class="display-field">
            @Html.DisplayFor( model => model.Description )
        </div>
        <div class="display-label">
            Status
        </div>
        <div class="display-field">
            @(( ( Status ) Model.Status ).GetDisplayText())
        </div>

    </div>

    <div class="left" style="width: 45%; max-height: 500px; overflow-y: auto;">
        <div class="display-label">
            Clients (@Model.ClientGroups.NullableCount())
        </div>
        <div class="display-field">

            @if ( Model.ClientGroups.NullableAny() )
            {
                <ul class="list">
                    @foreach ( ClientGroup cg in Model.ClientGroups )
                    {
                        <li style="line-height: 20px;">
                            @cg.Client.CompanyName
                        </li>
                    }
                </ul>
            }
            else
            {
                <div class="message-warn">
                    This group has no clients linked
                </div>
            }

        </div>
    </div>

    <div class="clear" style="border-bottom: 1px dashed #ccc; margin-bottom: 10px; height: 10px;">&nbsp;</div>

    @if ( ViewBag.IncludeLayout == null )
    {
        <p>
            @Html.ActionLink( "Edit", "EditGroup", new { id = Model.Id }, new { @class = "edit", @data_edit = "1", @data_id = Model.Id, @data_target = "#tr-" + Model.Id + "-item" } )

            @if ( ViewBag.IncludeLayout == null )
            {
                <span style="padding: 0 5px;">/</span>
                <a data-cancel="1" data-target="#item-details" data-remove="tr.edit">Cancel</a>
            }
        </p>
    }

    @if ( ViewBag.IncludeLayout != null )
    {
        <div class="back-to-list">
            @Html.ActionLink( "Back to List", "Index" )
        </div>
    }

</div>
