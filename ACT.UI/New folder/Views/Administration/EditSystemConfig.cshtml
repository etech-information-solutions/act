@model ACT.UI.Models.SystemConfigViewModel

@{
    if ( ViewBag.IncludeLayout == null )
    {
        Layout = null;
    }

    ViewBag.Title = "Edit";
}


@Html.Partial( "_Notification" )

@using ( Html.BeginForm( "EditSystemConfig", "Administration", FormMethod.Post, new { enctype = "multipart/form-data", @data_ajax_form = "1", @data_target = "#systemconfig", @style = "width: auto;" } ) )
{
    <div id="edit-item">

        <h2 class="uppercase" style="width: auto;">
            <img alt="" src="@Url.Content( "~/images/edit.png" )" />
            <span>Edit System Configuration</span>
        </h2>

        @Html.ValidationSummary( true )

        @Html.HiddenFor( model => model.Id )

        <div id="item-details" class="item-details" style="width: auto;">

            <div class="grouped-area">

                <div class="left" style="width: 48%; margin-right: 1%;">

                    <div class="edit-label">
                        @Html.LabelFor( model => model.SystemContactEmail )
                    </div>
                    <div class="edit-field">

                        @Html.TextBoxFor( model => model.SystemContactEmail, new { @placeholder = "Enter System Contact Email" } )
                        @Html.ValidationMessageFor( model => model.SystemContactEmail )
                    </div>

                    <div class="edit-label">
                        @Html.LabelFor( model => model.FinancialEmail )
                    </div>
                    <div class="edit-field">
                        @Html.TextBoxFor( model => model.FinancialEmail, new { @placeholder = "Enter Finance Contact Email" } )
                        @Html.ValidationMessageFor( model => model.FinancialEmail )
                    </div>

                    <div class="edit-label">
                        @Html.LabelFor( model => model.ActivationEmail )
                    </div>
                    <div class="edit-field">
                        @Html.TextBoxFor( model => model.ActivationEmail, new { @placeholder = "Enter Activation Email Address" } )
                        @Html.ValidationMessageFor( model => model.ActivationEmail )
                    </div>

                    <div class="edit-label">
                        @Html.LabelFor( model => model.CorrespondenceEmail )
                    </div>
                    <div class="edit-field">
                        @Html.TextBoxFor( model => model.CorrespondenceEmail, new { @placeholder = "Enter Correspondence Email" } )
                        @Html.ValidationMessageFor( model => model.CorrespondenceEmail )
                    </div>

                    <div class="edit-label">
                        @Html.LabelFor( model => model.ContactNumber )
                    </div>
                    <div class="edit-field">

                        @Html.TextBoxFor( model => model.ContactNumber, new { @placeholder = "Enter System Contact Number" } )
                        @Html.ValidationMessageFor( model => model.ContactNumber )
                    </div>

                    <div class="edit-label">
                        @Html.LabelFor( model => model.Address )
                    </div>
                    <div class="edit-field">

                        @Html.TextAreaFor( model => model.Address, 5, 10, new { @placeholder = "Enter System Contact Address" } )
                        @Html.ValidationMessageFor( model => model.Address )
                    </div>

                    <div class="edit-label">
                        @Html.LabelFor( model => model.InvoiceRunDay )
                    </div>
                    <div class="edit-field">
                        @Html.TextBoxFor( model => model.InvoiceRunDay, new { @placeholder = "1" } )
                        @Html.ValidationMessageFor( model => model.InvoiceRunDay )
                    </div>

                </div>

                <div class="left" style="width: 48%;">

                    <div class="edit-label">
                        @Html.LabelFor( model => model.AutoLogoff )
                    </div>
                    <div class="edit-field">
                        @Html.CheckBoxFor( model => model.AutoLogoff )
                        @Html.ValidationMessageFor( model => model.AutoLogoff )
                    </div>

                    <div class="edit-label">
                        @Html.LabelFor( model => model.LogoffSeconds )
                    </div>
                    <div class="edit-field">
                        @Html.TextBoxFor( model => model.LogoffSeconds, new { @placeholder = "30" } )
                        @Html.ValidationMessageFor( model => model.LogoffSeconds )
                    </div>

                    <div class="edit-label">
                        @Html.LabelFor( model => model.PasswordChange )
                    </div>
                    <div class="edit-field">
                        @Html.TextBoxFor( model => model.PasswordChange, new { @placeholder = "30" } )
                        @Html.ValidationMessageFor( model => model.PasswordChange )
                    </div>

                    <div class="edit-label">
                        @Html.LabelFor( model => model.ImagesLocation )
                    </div>
                    <div class="edit-field">

                        @Html.TextBoxFor( model => model.ImagesLocation, new { @placeholder = "Enter Images Location" } )
                        @Html.ValidationMessageFor( model => model.ImagesLocation )
                    </div>

                    <div class="edit-label">
                        @Html.LabelFor( model => model.DocumentsLocation )
                    </div>
                    <div class="edit-field">
                        @Html.TextBoxFor( model => model.DocumentsLocation, new { @placeholder = "Enter Documents Location" } )
                        @Html.ValidationMessageFor( model => model.DocumentsLocation )
                    </div>

                    <div class="edit-label">
                        @Html.LabelFor( model => model.AppDownloadUrl )
                    </div>
                    <div class="edit-field">
                        @Html.TextBoxFor( model => model.AppDownloadUrl, new { @placeholder = "Enter App Download Url" } )
                        @Html.ValidationMessageFor( model => model.AppDownloadUrl )
                    </div>

                    <div class="edit-label">
                        @Html.LabelFor( model => model.WebsiteUrl )
                    </div>
                    <div class="edit-field">
                        @Html.TextBoxFor( model => model.WebsiteUrl, new { @placeholder = "Enter Website Url" } )
                        @Html.ValidationMessageFor( model => model.WebsiteUrl )
                    </div>

                </div>

                <div class="clear"></div>

            </div>

            <div class="clear" style="border-bottom: 1px dashed #ccc; margin-bottom: 20px; height: 0;">&nbsp;</div>

            <div class="grouped-area" style="margin-bottom: 0;">

                <p style="margin-bottom: 0;">

                    <input id="save-btn" type="submit" value="Save" />

                    <span style="padding: 0 5px;">/</span>

                    <a data-refresh="1" data-target="#systemconfig">Cancel</a>

                    <span class="loader"></span>

                </p>

            </div>

        </div>

    </div>
}
