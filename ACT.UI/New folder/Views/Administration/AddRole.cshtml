@model RoleViewModel

@using ACT.UI.Models;

@{
    if ( ViewBag.IncludeLayout == null )
    {
        Layout = null;
    }

    ViewBag.Title = "Add Role";
}


@Html.Partial( "_Notification" )

@using ( Html.BeginForm( "AddRole", "Administration", FormMethod.Post, new { enctype = "multipart/form-data", @data_ajax_form = "1", @data_target = "#roles", @class = "custom-validate", @style = "width: auto;" } ) )
{
    <div id="edit-item">

        <h2 class="uppercase" style="width: auto;">
            <img alt="" src="@Url.Content( "~/images/add.png" )" />
            <span>Add Role</span>
        </h2>

        @Html.ValidationSummary( true )

        <div id="item-details" class="item-details" style="width: auto;">

            <div class="left" style="width: 47%; margin-right: 1%;">

                <div class="edit-label">
                    @Html.LabelFor( model => model.Name )
                </div>
                <div class="edit-field">
                    @Html.TextBoxFor( model => model.Name, new { @placeholder = "Enter Role Name" } )
                    @Html.ValidationMessageFor( model => model.Name )
                </div>

                <div class="edit-label">
                    @Html.LabelFor( model => model.Type )
                </div>
                <div class="edit-field">
                    @Html.EnumDropDownFor( model => model.Type, false, new { @class = "chzn", @style = "width: 98%;" } )
                    @Html.ValidationMessageFor( model => model.Type )
                </div>

            </div>

            <div id="role-functions" class="grouped-area left" style="width: 48%;">

                <p>
                    <strong class="uppercase" style="color: #002e70 !important;">FUNCTIONS</strong>
                </p>

                <div class="edit-field">
                    @Html.CheckBoxFor( model => model.DashBoard, new { @style = "margin-top: 1px;" } )
                </div>

                <div class="edit-label">
                    @Html.LabelFor( model => model.DashBoard )
                </div>

                <div class="clear">&nbsp;</div>

                <div class="edit-field">
                    @Html.CheckBoxFor( model => model.Administration, new { @style = "margin-top: 1px;" } )
                </div>

                <div class="edit-label">
                    @Html.LabelFor( model => model.Administration )
                </div>

                <div class="clear">&nbsp;</div>

                <div class="edit-field">
                    @Html.CheckBoxFor( model => model.Finance, new { @style = "margin-top: 1px;" } )
                </div>

                <div class="edit-label">
                    @Html.LabelFor( model => model.Finance )
                </div>

                <div class="clear">&nbsp;</div>

                <div class="edit-field">
                    @Html.CheckBoxFor( model => model.Client, new { @style = "margin-top: 1px;" } )
                </div>

                <div class="edit-label">
                    @Html.LabelFor( model => model.Client )
                </div>

                <div class="clear">&nbsp;</div>

                <div class="edit-field">
                    @Html.CheckBoxFor( model => model.Customer, new { @style = "margin-top: 1px;" } )
                </div>

                <div class="edit-label">
                    @Html.LabelFor( model => model.Customer )
                </div>

                <div class="clear">&nbsp;</div>

                <div class="edit-field">
                    @Html.CheckBoxFor( model => model.Product, new { @style = "margin-top: 1px;" } )
                </div>

                <div class="edit-label">
                    @Html.LabelFor( model => model.Product )
                </div>

                <div class="clear">&nbsp;</div>

                <div class="edit-field">
                    @Html.CheckBoxFor( model => model.Pallet, new { @style = "margin-top: 1px;" } )
                </div>

                <div class="edit-label">
                    @Html.LabelFor( model => model.Pallet )
                </div>

                <div class="clear"></div>

            </div>

            <div class="clear" style="border-bottom: 1px dashed #ccc; margin-bottom: 10px; height: 0;">&nbsp;</div>

            <p>
                <input id="save-btn" type="submit" value="Save" />

                <span style="padding: 0 5px;">/</span>

                <a data-refresh="1" data-target="#roles">Cancel</a>
            </p>

        </div>

    </div>
}